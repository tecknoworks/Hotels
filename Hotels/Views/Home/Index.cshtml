<style style="text/css">
	.col-md-4 {
		width: 25%;
		border-collapse: collapse;
	}

		.col-md-4 td {
			padding: 10px;
			border: rgba(119, 41, 83, 0.74) 1px solid;
		}
		/* Define the default color for all the table rows */
		.col-md-4 tr {
			background: rgb(203, 165, 185);
		}
		/* Define the hover highlight color for the table row */
        .col-md-4 tr:hover {
			background-color: white;
		}
.carousel {
    width: 500px;
    height: 40px;
    background: rgb(118, 92, 106);
  -webkit-transition: width 2s, height 4s; /* For Safari 3.1 to 6.0 */
    transition: width 2s, height 4s;
}
.carousel:hover {
    width: 1000px;
	 height: 700px;
}
.progress{
		width: 300px;
		height: 200px;
		visibility: hidden!important;
		display:normal;
	
	}
</style>

@{
	ViewBag.Title = "Teckbook.com";
}

<div class="jumbotron">
	<h1 style="color:black">Teckbook</h1>
	<p class="lead" style="color:black">Every month 120+ million visitors use Teckbook to search hotels, read reviews & browse photos. Find your ideal hotel deal right here.
	Please use the site one by one.</p>
</div>

<div class="carousel" onmouseover="myMap()" onmouseout="myMapOut()" style="color:white;font-size:x-large;">   Unforgettable trips start here!
	<div id="googleMap1" class="progress" style="visibility:hidden"></div>
	<br>

	<script>
function myMap(map1) {
  var mapOptions1 = {
    center: new google.maps.LatLng(51.508742,-0.120850),
    zoom:1,
    mapTypeId: google.maps.MapTypeId.ROADMAP
  };
  var map1 = new google.maps.Map(document.getElementById("googleMap1"), mapOptions1);
  document.getElementById("googleMap1").style.visibility = "visible";
  //document.getElementById("googleMap1").style.display = "block";

}
function myMapOut(map1) {
	var mapOptions1 = {
		center: new google.maps.LatLng(51.508742, -0.120850),
		zoom: 9,
		mapTypeId: google.maps.MapTypeId.ROADMAP
	};
	var map1 = new google.maps.Map(document.getElementById("googleMap1"), mapOptions1);
	document.getElementById("googleMap1").style.visibility = "hidden";
}
	</script>
	<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyA_U6W6I7vNQ61tTP2Z6QkaoORBTfsY4ZY&callback=myMap"></script>
</div>
<br />



    <div id="countries" class="col-md-4">
	    <table class="table" style="width:90%" >
		    <thead style="margin-left:0px;margin-right:0px">
			    <tr style="background-color:rgba(119, 41, 83, 0.74); color:#ffffff;font-size:x-large;">
				    <th style="width:100%;height:20px">
                    Countries</th>

			    </tr>
		    </thead>
		    <tbody data-bind="foreach:Countries">
			    <tr >
				    <td class="col-md-4" style="background-color:rgba(242, 233, 238, 0.41);margin-left:0px;margin-right:0px;color:black"data-bind="click:$parent.getCities"  data-target="#countryItem">
					    <h4 data-bind="text: Name" style="font-size:large;margin-left:0px;margin-right:0px"> </h4>
				    </td>

			    </tr>
		    </tbody>
	    </table>
	    @Html.Partial("Item")
    </div>


    <div id="cities" class="col-md-4" style="display:none">
	    <table class="table" style="width:90%">
		    <thead>
			    <tr style="background-color:rgba(119, 41, 83, 0.74); color:#ffffff ;font-size:x-large">
				    <th>Cities</th>
			    </tr>
		    </thead>
		    <tbody data-bind="foreach:Cities">
			    <tr>
				    <td class="col-xs-5" style="background-color:rgba(242, 233, 238, 0.41);color:black" data-bind="click:$parent.getAcomodations" data-target="#cityItem">
					    <h4 data-bind="text: Name" style="font-size:large"> </h4>
				    </td>
			    </tr>
		    </tbody>
	    </table>
	    @Html.Partial("CityItem")
    </div>

    <div id="acomodations" class="col-md-4" style="display:none">
	    <table class="table" style="width:90%">
		    <thead>
			    <tr style="background-color:rgba(119, 41, 83, 0.74); color:#ffffff;font-size:x-large ">
				    <th >Properties</th>
                    <th></th>
			    </tr>
		    </thead>
		    <tbody data-bind="foreach:Acomodations">
			    <tr>
				    <td class="col-xs-5" style="background-color:rgba(242, 233, 238, 0.41);color:black" data-bind="click:$parent.getRooms" data-target="#acomodationItem">
					    <h4 data-bind="text: Name" style="font-size:large;margin-right: 5px" > </h4>
				    </td>

				    <td  class="col-xs-5">
					    <input type="button" value="Details" class="btn btn-info" data-toggle="modal" data-target="#acomodationItem" data-bind="click:$parent.details" />
				    </td>
				
			    </tr>
		    </tbody>
	    </table>
	    @Html.Partial("AcomodationItem")
    </div>

    <div id="rooms" class="col-md-4" style="display:none">
	    <table class="table" style="width:90%">
		    <thead >
			    <tr style="background-color:rgba(119, 41, 83, 0.74); color:#ffffff ;font-size:x-large">
				    <th>Rooms</th>
                    <th></th>
                    <th></th>
			    </tr>
		    </thead>
            <tbody data-bind="foreach:Rooms">

                <tr >
                    <td class="col-xs-5" style="background-color:rgba(242, 233, 238, 0.41);color:black">
                        <h4 data-bind="text:RoomType" style="font-size:large;margin-right: 5px"></h4>
                    </td>
            
                    <td class="col-xs-5">

                        <input type="button" value="Details" class="btn btn-info" data-toggle="modal" data-target="#roomItem" data-bind="click:$parent.details" />
                    </td>
                    <td class="col-xs-5">
                        <input type="button" value="Book" class="btn btn-info" data-toggle="modal" data-target="#bookItem" data-bind="click:$parent.details" />
                        

                    </td>
                </tr>

            </tbody>
	    </table>
	    @Html.Partial("RoomItem")
    </div>
    <div id="facilities" class="col-md-4" style="display:none">
    <table class="table" style="width:90%">
        <thead>
            <tr style="background-color:rgba(119, 41, 83, 0.74); color:#ffffff ;font-size:x-large">
                <th>Facilities</th>
                <th></th>
            </tr>
        </thead>
        <tbody data-bind="foreach:Facilities">

            <tr>
                <td class="col-xs-5" style="background-color:rgba(242, 233, 238, 0.41);color:black">
                    <h4 data-bind="text:Description" style="font-size:large;margin-right: 5px"></h4>
            </tr>

        </tbody>
    </table>
</div>
    



<script type="text/javascript">
    $(function () {
        var vm = new Locations();
        vm.refresh();
        ko.applyBindings(vm, $("#countries").get(0));
        ko.applyBindings(vm, $("#cities").get(0));
        ko.applyBindings(vm, $("#acomodations").get(0));
        ko.applyBindings(vm, $("#rooms").get(0));
        ko.applyBindings(vm, $("#facilities").get(0));
    });

  

</script>