@{
    ViewBag.Title = "About";
}
<div class="row">
    <div id="acomodations" class="col-md-4">
        <table class="table">
            <thead>
                <tr>
                    <th>Acomodation Name</th>
                    <th></th>
                </tr>
            </thead>
            <tbody data-bind="foreach:Acomodations">
                <tr>
                    <td class="col-xs-5" data-bind="text:Name"></td>
                    <td class="col-xs-1">
                        <input type="button" value="Acomodation Details" class="btn btn-info" data-toggle="modal" data-target="#acomodationItem" data-bind="click:$parent.details" />
                    </td>
                </tr>
            </tbody>
        </table>
        @Html.Partial("Item")
    </div>
</div>
<script type="text/javascript">
    $(function () {
        var vm = new Acomodations();
        vm.refresh();
        ko.applyBindings(vm, $("#acomodations").get(0));
    });
</script>