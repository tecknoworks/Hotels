<div id="addRooms">
    <h3 style="color:white">Add a new room</h3>
    <br />
    <div id="countries" >
        <label style="color:white">Country*</label>
        <select style="color:black" data-bind="options: Countries, optionsText: 'Name', optionsValue: 'Id', optionsCaption: 'Choose ...', event:{ change: getCities} " class="form-control"></select>

    </div>
    <br />
    <div id="cities" style="display:normal!important">
        <label style="color:white">City*</label>
        <select style="color:black" data-bind="options: Cities, optionsText: 'Name', optionsValue: 'Id', optionsCaption: 'Choose ...',event:{ change: getAcomodations}" class="form-control"></select>
    </div>
    <br />
    <div id="acomodations" style="display:normal!important">
        <label style="color:white">Accommodation*</label>
        <select style="color:black" data-bind="options: Acomodations, optionsText: 'Name', optionsValue: 'Id', value: AcomodationId, optionsCaption: 'Choose ...'" class="form-control"></select>
        <div data-bind="visible: AcomodationId">
            <span data-bind="text: AcomodationId() ? AcomodationId().Id : 'unknown'"></span>
        </div>
    </div>
    <h3 style="color:white">Room details:</h3>
    <br />

    <label style="color:white">Room type*</label>
    @Html.DropDownList("RoomType", EnumHelper.GetSelectList(typeof(DataLayer.RoomType)), "Choose...", new { @class = "form-control" })
    <br />
    <label style="color:white">Description*</label>
    <input id="Description" type="text" data-bind="value:Description" class="form-control" style="color:black" />
    <br />
    <label style="color:white">Price*</label>
    <input id="Price" type="text" data-bind="value:Price"  style="color:black" class="form-control" />
    <br />

    <label style="color:white">Nr. of children*</label>
    <input id="NumberOfChildren" type="text" data-bind="value:NumberOfChildren"  style="color:black" class="form-control"/>
    <br />

    <label style="color:white">Nr. of adults*</label>
    <input id="NumberOfAdults" type="text" data-bind="value:NumberOfAdults"  style="color:black" class="form-control"/>
    <br />

    <label style="color:white">Nr. of rooms available*</label>
    <input id="NumberOfRoomsAvailable" type="text" data-bind="value:NumberOfRoomsAvailable" style="color:black" class="form-control" />
    <br />

    <form id="RoomPhoto" method="post" enctype="multipart/form-data">
        <label style="color:white">Room photo*</label>
        <INPUT type=file id=File1 name=File1 data-bind="value: RoomPhoto" style="color:white"/>
        <br>

    </form>
    <br />


    <h3 id="succesRoom" style="color:red;visibility:hidden">The room was successfully added !</h3>
    <br />

    <label style="color:white">* All the fields are required</label>
    <br />
    <br />
    
    <button id="btnAddRoom" class="btn btn-default" style="color:black; background:lightpink" data-bind="click: addNewRoom">Add room</button>
</div>

<script>
	

	$(function () {
	    var vm = new Accomodation();
	    vm.refresh();
	    ko.applyBindings(vm, $("#addRooms").get(0));
	});
    
</script>


<script type="text/javascript">
    function onButton() {
        if ((City.value == "") || (Address.value == "") || (Name.value == "") || (NumberOfStars.value = "") || (Description.value = "") ||
			(PhoneNumber.value == "") || (WebSite.value == "") || (Price.value == "") || (NumerOfChildren == "") || (NumberOfAdults == "") ||
			(NumerOfRoomsAvailabe == "")) {
            alert('Please complete all required fields');
        }

    }
</script>